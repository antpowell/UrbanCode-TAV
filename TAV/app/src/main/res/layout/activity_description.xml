<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"

    tools:context="com.anthony_powell.tav.AdventureDescriptionActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/header_bg"/>

    <TextView
        android:id="@+id/adventure_description_title"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/adventure_point_rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/adventure_description_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/adventure_point_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000pts"
            android:textSize="24dp"
            android:textColor="@color/colorYellow"
            android:textStyle="bold"/>
        <RatingBar
            android:theme="@style/RatingBar"
            android:id="@+id/adventure_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:rating="5"
            android:stepSize='0.5'
            android:numStars="5"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/adventure_description_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/adventure_point_rating_layout"
        android:text="@string/lorem"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        fancy:fb_text='DECLINE'
        fancy:fb_radius='30dp'
        fancy:fb_defaultColor='@color/colorBlue'
        fancy:fb_textColor='@color/colorBlack'
        fancy:fb_borderColor='@color/colorBlack'
        fancy:fb_borderWidth='2dp'
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_marginRight="32dp"
        fancy:fb_text='ACCEPT'
        fancy:fb_radius='30dp'
        fancy:fb_defaultColor='@color/colorBlue'
        fancy:fb_textColor='@color/colorBlack'
        fancy:fb_borderColor='@color/colorBlack'
        fancy:fb_borderWidth='2dp'
        />



</RelativeLayout>
